<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:background="@drawable/background_grayblack" 
        android:layout_width="fill_parent" 
        android:layout_height="40.0dip">
        <TextView 
            android:id="@+id/textview_add_camera"
            android:textSize="18.0sp" 
            android:textStyle="bold" 
            android:textColor="@color/color_white" 
            android:layout_gravity="center_vertical" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginLeft="5.0dip" 
            android:shadowColor="@color/color_shadow" 
            android:shadowDx="1.0" 
            android:shadowDy="1.0" 
            android:shadowRadius="1.0" />
    </LinearLayout>
    
    <ImageView 
	    android:layout_width="fill_parent" 
	    android:layout_height="2.0dip" 
	    android:src="@drawable/background_separate_vertical" />
    
    <ScrollView 
        android:background="@drawable/background_silver_light" 
        android:padding="10.0dip" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent" 
        android:layout_weight="1.0">
        
        <LinearLayout 
        android:orientation="vertical" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent"
        android:background="@drawable/background_white_corner" 
        android:padding="10.0dip">  
        
            <LinearLayout 
	        android:orientation="horizontal" 
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content">        
	           
			    
			    <RadioGroup 
			        android:id="@+id/radio_group_camera_type"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_gravity="center_vertical">"
					
					 
				</RadioGroup>	
				
			</LinearLayout>	    		
          
            
		    <TextView
		        android:textColor="@color/subtitle_color" 
		        android:gravity="center_vertical"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/camera_name"
		        android:layout_marginTop="5dip"
		        android:textSize="@dimen/text_title_size"/>
		    
		    <EditText
		        android:singleLine="true"
		        android:maxLength="20"
		        android:id="@+id/editDevName"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="IPCamera"/>	    
		    
		
		    <TextView
		        android:textColor="@color/subtitle_color" 
		        android:gravity="center_vertical"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/camera_id"
		        android:textSize="@dimen/text_title_size"/>"
		    
		    <EditText
		        android:singleLine="true"
		        android:maxLength="64"
		        android:id="@+id/editDID"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"/>
		    
		    <TextView
		        android:textColor="@color/subtitle_color" 
		        android:gravity="center_vertical"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/camera_user"
		        android:textSize="@dimen/text_title_size"/>
		    
		    <EditText
		        android:singleLine="true"
		        android:maxLength="20"
		        android:id="@+id/editUser"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="admin"/>
    
		    <TextView
		        android:textColor="@color/subtitle_color" 
		        android:gravity="center_vertical"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/camera_pwd"
		        android:textSize="@dimen/text_title_size"/>
		    
		    <EditText
		        android:singleLine="true"
		        android:maxLength="20"
		        android:id="@+id/editPwd"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:password="true"/>  	        
		    
		  
    	</LinearLayout>        

    </ScrollView> 
    
        <ImageView 
	        android:layout_width="fill_parent" 
	        android:layout_height="2.0dip" 
	        android:src="@drawable/background_separate_vertical" />
        
    	<LinearLayout 
        android:gravity="center_vertical" 
        android:background="@drawable/background_silver" 
        android:layout_width="fill_parent" 
        android:layout_height="60.0dip">
    	
        <Button 
            android:id="@+id/btnAdd" 
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent" 
            android:layout_marginLeft="3.0dip" 
            android:layout_marginTop="5.0dip" 
            android:layout_marginBottom="3.0dip" 
            android:text="@string/str_ok" 
            android:layout_weight="1.0"
            android:textSize="@dimen/text_title_size"/>
        <Button 
            android:id="@+id/btnCancel" 
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent" 
            android:layout_marginTop="5.0dip" 
            android:layout_marginRight="3.0dip" 
            android:layout_marginBottom="3.0dip" 
            android:text="@string/str_cancel" 
            android:layout_weight="1.0"
            android:textSize="@dimen/text_title_size"/>
    </LinearLayout>

</LinearLayout>