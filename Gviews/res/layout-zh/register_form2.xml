<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_color" >

    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/contact_bg_top"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/back_btn"
            style="@style/top_left_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="@string/wizard"
            android:textColor="@color/black"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold" />
        <!--
        <Button 
            android:id="@+id/register"
            android:layout_width="@dimen/tab_btn_width"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/tab_btn_margin"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/next"
            android:textColor="@color/text_color_white"
            android:background="@drawable/tab_button"
            />
        -->
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/by_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_title"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" >

        <RadioGroup
            android:id="@+id/register_two_fun"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/sharecfcase_gray"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/phone_register"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:background="@drawable/sharecf_blue_register_btn"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="@string/phone_register"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/email_register"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/sharecf_blue_register_btn"
                android:button="@null"
                android:gravity="center"
                android:text="@string/email_register"
                                android:layout_marginBottom="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:textColor="@color/black" >
            </RadioButton>
        </RadioGroup>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_phome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/by_register"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/sharecf_phonenumber"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height"
            android:background="@drawable/sharecfcase_gray" >

            <EditText
                android:id="@+id/register_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="#00000000"
                android:gravity="left|center_vertical"
                android:hint="@string/sharecf_input_tip1"
                android:inputType="number"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_normal" />

            <RelativeLayout
                android:id="@+id/register_phone_clear"
                android:layout_width="@dimen/edit_icon_button_width"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/login_img_remember_pwd_magin"
                    android:scaleType="centerCrop"
                    android:src="@drawable/selector_delete_button" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_phome"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/sharecf_verifycode"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/edit_height"
            android:layout_weight="99"
            android:background="@drawable/sharecfcase_gray" >

            <EditText
                android:id="@+id/register_msgverific"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"                               
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="#00000000"
                android:gravity="left|center_vertical"
                android:hint="@string/sharecf_input_tip2"
                android:inputType="number"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_normal" />

            <RelativeLayout
                android:id="@+id/register_msgverific_clear"
                android:layout_width="@dimen/edit_icon_button_width"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/login_img_remember_pwd_magin"
                    android:scaleType="centerCrop"
                    android:src="@drawable/selector_delete_button" />
            </RelativeLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/getcodebtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/sharecf_blue_btn_selector"
            android:padding="4dp"
            android:text="@string/sharecf_getverifycode"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_verify"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/sharecf_email"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height"
            android:background="@drawable/sharecfcase_gray" >

            <EditText
                android:id="@+id/register_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="#00000000"
                android:gravity="left|center_vertical"
                android:hint="@string/sharecf_input_tip3"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_normal" />

            <RelativeLayout
                android:id="@+id/register_email_clear"
                android:layout_width="@dimen/edit_icon_button_width"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/login_img_remember_pwd_magin"
                    android:scaleType="centerCrop"
                    android:src="@drawable/selector_delete_button" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_email"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/sharecf_pwd"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height"
            android:background="@drawable/sharecfcase_gray" >

            <EditText
                android:id="@+id/register_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="#00000000"
                android:gravity="left|center_vertical"
                android:hint="@string/inputpassword"
                android:inputType="textPassword"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_normal" />

            <RelativeLayout
                android:id="@+id/register_pwd_clear"
                android:layout_width="@dimen/edit_icon_button_width"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/login_img_remember_pwd_magin"
                    android:scaleType="centerCrop"
                    android:src="@drawable/selector_delete_button" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_confirm_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_height"
        android:layout_below="@+id/layout_pwd"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/corner_tiao_single_bg"
        android:visibility="gone" >

        <!-- 再一次输入密码的框框被我隐藏掉了 -->

        <EditText
            android:id="@+id/confirm_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="#00000000"
            android:gravity="left|center_vertical"
            android:hint="@string/reinputpassword"
            android:inputType="textPassword"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_normal" />
    </RelativeLayout>

    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/globel_button_height"
        android:layout_below="@+id/layout_confirm_pwd"
        android:layout_marginLeft="@dimen/left_right_margin"
        android:layout_marginRight="@dimen/left_right_margin"
        android:layout_marginTop="@dimen/item_group_margin_top"
        android:background="@drawable/sharecf_blue_btn_selector"
        android:text="@string/btn_register"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_normal" />

</RelativeLayout>