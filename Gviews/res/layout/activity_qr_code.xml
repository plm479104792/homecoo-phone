<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical" 
    android:background="@color/activity_color"
    >
    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/contact_bg_top"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/top_left_back_btn"
             />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            
            android:text="@string/qr_code_add_device"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold" />
    </RelativeLayout>
 <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        
        >
        
        <RelativeLayout 
            android:id="@+id/layout_ssid"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qr_code_edit_height"
            android:background="@drawable/corner_tiao_single_bg"
            android:layout_marginLeft="@dimen/item_left_right_margin"
            android:layout_marginRight="@dimen/item_left_right_margin"
            android:layout_marginTop="@dimen/item_group_margin_top"
            >
            <TextView
                android:id="@+id/tv_ssid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/inner_margin_left"
                android:layout_marginRight="@dimen/inner_margin_right"
                android:layout_centerVertical="true"
                android:text="@string/please_choose_wireless"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_color_black"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:background="#00000000"
                />          
    	</RelativeLayout>
    	<RelativeLayout 
            android:id="@+id/layout_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qr_code_edit_height"
            android:background="@drawable/corner_tiao_single_bg"
            android:layout_marginLeft="@dimen/item_left_right_margin"
            android:layout_marginRight="@dimen/item_left_right_margin"
            android:layout_marginTop="@dimen/item_group_margin_top"
            >
            <EditText 
                android:id="@+id/edit_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/inner_margin_left"
                android:layout_marginRight="@dimen/inner_margin_right"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_color_black"
                android:gravity="left|center_vertical"
                android:inputType="textPassword"
                android:text=""
                android:singleLine="true"
                android:background="#00000000"
                android:hint="@string/input_wifi_pwd"
                />
            
    	</RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/item_left_right_margin"
        android:layout_marginRight="@dimen/item_left_right_margin"
        android:layout_marginTop="@dimen/item_group_margin_top"
        android:orientation="vertical" >

        <Button
            android:id="@+id/next"
            android:layout_width="@dimen/bt_qr_next_width"
            android:layout_height="@dimen/bt_qr_next_height"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/sharecf_blue_btn_selector"
            android:text="@string/next" 
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/text_color_white"/>
       
    </LinearLayout>
</LinearLayout>