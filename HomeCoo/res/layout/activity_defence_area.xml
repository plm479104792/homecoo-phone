<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include android:id="@+id/lv_item_header"
             layout="@layout/item_header"/>
    <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:background="@drawable/bg_content_base"
        android:padding="@dimen/content_padding"
        android:orientation="vertical">
   
      <GridLayout
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_gravity="center"
	      android:rowCount="3"  
	      android:columnCount="5"
	      android:padding="30dp"
       >
       <ImageView
              android:id="@+id/tv_indoor_bufang"
              android:layout_columnSpan="2" 
              android:layout_rowSpan="1"  
              android:layout_gravity="fill"  
              android:background="@drawable/area_indoor_bufang"
                /> 
        <ImageButton
		      android:id="@+id/tv_indoor_chefang"
		      android:layout_columnSpan="2" 
		      android:layout_rowSpan="1"  
		      android:layout_gravity="fill"  
		      android:background="@drawable/area_indoor_chefang"
         /> 
         <TextView
                android:layout_gravity="fill"
                android:gravity="center"
                android:text="@string/username"
                android:visibility="invisible"
                android:layout_columnSpan="5" 

                />
        <ImageButton
            android:id="@+id/tv_outdoor_bufang"
            android:layout_columnSpan="2" 
            android:layout_rowSpan="1"  
            android:layout_gravity="fill"  
            android:background="@drawable/area_outdoor_bufang"
              /> 
         <ImageButton
        android:id="@+id/tv_outdoor_chefang"
        android:layout_columnSpan="2" 
        android:layout_rowSpan="1"  
        android:layout_gravity="fill"  
        android:background="@drawable/area_outdoor_chefang"
          /> 
    </GridLayout>

    </LinearLayout>
  <include android:id="@+id/lv_item_bottom"
             layout="@layout/item_bottom"/>
   
</LinearLayout>