<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
     >
     <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:drawablePadding="5dp"
	        android:text="网  关   编  号"
	        />
	    <EditText
	        android:id="@+id/et_gatewayNo" 
	        android:layout_width="@dimen/wifi_et_wideth"
	        android:layout_height="wrap_content"
	        android:hint="请输入网关编号"
	       />
	</LinearLayout>  
     <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:drawablePadding="5dp"
	        android:text="网  关   密  码"
	        />
	    <EditText
	        android:id="@+id/et_gatewayPwd" 
	        android:layout_width="@dimen/wifi_et_wideth"
	        android:layout_height="wrap_content"
	        android:hint="请输入网关密码"
	       />
	</LinearLayout>  
   
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    <TextView 
	        android:id="@+id/tv_wifi_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:drawablePadding="5dp"
	        android:text="路由无线名称"
	        />
	    <EditText
	        android:id="@+id/et_wifi_name" 
	        android:layout_width="@dimen/wifi_et_wideth"
	        android:layout_height="wrap_content"
	        android:hint="请输入路由器无线名称"
	       />
	</LinearLayout>   
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    <TextView 
	        android:id="@+id/tv_wifi_pwd"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:drawablePadding="5dp"
	        android:text="路由无线密码"/>
	    <EditText
	        android:id="@+id/et_wifi_pwd" 
	        android:layout_width="@dimen/wifi_et_wideth"
	        android:layout_height="wrap_content"
	        android:hint="请输入路由无线密码"/>
	</LinearLayout>  
	<Button 
	    android:id="@+id/btn_wifi_submit"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="确  定"/>
	   
</LinearLayout>
