<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/list_bground"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/im_list_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/list_bgleft" />
    
     
    
      <TextView
          android:id="@+id/tv_window_devSite"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="客厅"
          android:textColor="@color/color_shadow"
          android:textSize="@dimen/list_text_size" 
          android:paddingLeft="5dp"
          android:layout_centerVertical="true"
          android:layout_toEndOf="@+id/im_list_left"/>
      
        <TextView
        android:id="@+id/tv_window_devtypeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="@dimen/list_text_size"
        android:text=" / 窗帘" 
        android:textColor="@color/color_shadow"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/tv_window_devSite"
        />
        
     <ImageView
         android:id="@+id/im_list_right"
        android:layout_width="wrap_content"
         android:layout_height="wrap_content"
        android:src="@drawable/list_bgright" 
        android:layout_alignParentEnd="true"/>
 

         <ImageButton 
        android:id="@+id/im_btnOn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/on0" 
         android:layout_toStartOf="@+id/im_list_right"
        />
        <ImageButton 
        android:id="@+id/im_btnPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/pause0" 
        android:layout_toStartOf="@+id/im_btnOn"
        />

           <ImageButton 
        android:id="@+id/im_btnOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/off0" 
        android:layout_toStartOf="@+id/im_btnPause"
        />

</RelativeLayout>