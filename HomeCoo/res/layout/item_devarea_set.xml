<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/list_bground"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/im_list_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/list_bgleft" />
    
      <TextView
          android:id="@+id/tv_set_devSite"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="客厅"
          android:textColor="@color/color_shadow"
          android:textSize="@dimen/list_text_size" 
          android:paddingLeft="5dp"
          android:layout_centerVertical="true"
          android:layout_toRightOf="@+id/im_list_left"/>
      
        <TextView
        android:id="@+id/tv_set_devtypeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="@dimen/list_text_size"
        android:text=" / 电灯" 
        android:textColor="@color/color_shadow"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_set_devSite"
        />
    
     <ImageView
         android:id="@+id/im_list_right"
        android:layout_width="wrap_content"
         android:layout_height="wrap_content"
        android:src="@drawable/list_bgright" 
        android:layout_alignParentRight="true"/>
     
      <RadioGroup 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_centerVertical="true"
          android:layout_toLeftOf="@+id/im_list_right"
          >

	      <RadioButton
	          android:id="@+id/rbtn_outdoor"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_centerVertical="true"
	          android:layout_toLeftOf="@+id/im_list_right"
	          android:text="室外" />
	      <RadioButton
	          android:id="@+id/rbtn_indoor"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_centerVertical="true"
	          android:layout_toLeftOf="@+id/rbtn_outdoor"
	          android:text="室内" />
      </RadioGroup>
</RelativeLayout>