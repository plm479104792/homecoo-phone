<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/list_bground"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/im_list_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/list_bgleft" />
    
      <TextView
          android:id="@+id/tv_set_devSite"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="客厅"
          android:textColor="@color/color_shadow"
          android:textSize="@dimen/list_text_size" 
          android:paddingLeft="5dp"
          android:layout_centerVertical="true"
          android:layout_toRightOf="@+id/im_list_left"/>
      
        <TextView
        android:id="@+id/tv_set_devtypeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="@dimen/list_text_size"
        android:text=" / 电灯" 
        android:textColor="@color/color_shadow"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_set_devSite"
        />
    
     <ImageView
         android:id="@+id/im_list_right"
        android:layout_width="wrap_content"
         android:layout_height="wrap_content"
        android:src="@drawable/list_bgright" 
        android:layout_alignParentRight="true"/>
 
     <ImageView
        android:id="@+id/im_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/down_set" 
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/im_list_right"
        android:layout_marginRight="5dp"
        
        />
      <ToggleButton
        android:id="@+id/tg_sensor_switch"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/im_setting"
        android:textOff="停用"
        android:textOn="开启"
        android:layout_marginRight="5dp"
        android:visibility="gone"
        />
     

</RelativeLayout>