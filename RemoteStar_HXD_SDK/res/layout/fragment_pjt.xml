<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
                android:background="#eee"
    android:scrollbarStyle="outsideOverlay" >

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
 
    android:paddingTop="1dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_pjt_power_on"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            
            android:clickable="true"
            android:gravity="center"
            android:text="@string/str_other_power_on"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/text_pjt_power_off"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/str_other_power_off"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_pjt_computer"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/str_other_computer"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_pjt_video"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"

            android:clickable="true"
            android:gravity="center"
            android:text="@string/str_other_video"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_pjt_signal"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"

            android:clickable="true"
            android:gravity="center"
            android:text="@string/str_other_signal"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_pjt_mute"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/str_other_mute"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_pjt_auto"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"

            android:clickable="true"
            android:gravity="center"
            android:text="@string/str_other_auto"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_pjt_pause"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/str_media_pause"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_pjt_brightness"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/str_media_brightness"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_pjt_exit"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/str_other_exit"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_pjt_picture_in"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/str_media_picture_in"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_pjt_menu"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"

            android:clickable="true"
            android:gravity="center"
            android:text="@string/str_other_menu"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_pjt_picture_out"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/str_media_picture_out"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="70dp"
             android:layout_height="match_parent"
            android:background="@drawable/bg_double"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_pjt_vol_add"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"

                android:clickable="true"
                android:gravity="center"
                android:text="@string/str_other_voladd"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_pjt_vol_sub"
                android:layout_width="70dp"
                android:layout_height="70dp"
				android:layout_alignParentBottom="true"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/str_other_volsub"
                android:textColor="#000000"
                android:textSize="12sp" />
        </RelativeLayout>

         <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/text_pjt_up"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/text_pjt_left"
                    android:layout_width="50dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="20dip"
                   
                    android:clickable="true"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/text_pjt_ok"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
              
                    android:clickable="true"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/text_pjt_right"
                    android:layout_width="50dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="20dip"
                    
                    android:clickable="true"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/text_pjt_down"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    
                    android:clickable="true"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="70dp"
                                  android:layout_height="match_parent"
            android:background="@drawable/bg_double"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_pjt_zoom_in"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"

                android:clickable="true"
                android:gravity="center"
                android:text="@string/str_media_zoom_in"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_pjt_zoom_out"
                android:layout_width="70dp"
                android:layout_height="70dp"
				android:layout_alignParentBottom="true"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/str_media_zoom_out"
                android:textColor="#000000"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
</ScrollView>