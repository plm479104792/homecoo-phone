<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbarStyle="outsideOverlay" >

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textWizardsInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:drawableTop="@drawable/ic_wizards_one"
        android:text="@string/str_wizards_info_5" />

    <Button
        android:id="@+id/button_start_study"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_button_cast_selector"
        android:text="@string/str_start_study" />

</LinearLayout>
</ScrollView>