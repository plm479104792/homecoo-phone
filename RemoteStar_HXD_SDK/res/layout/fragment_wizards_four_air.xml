<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/ic_air_bg_new"
            android:baselineAligned="false"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/text_air_dir_show"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:gravity="center"
                            android:text="@string/str_other_wind_dir"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/text_air_dir"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/ic_air_dir_1"
                            android:gravity="center"
                            android:text=""
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/text_air_rate_show"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:gravity="center"
                            android:text="@string/str_other_wind_speed"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/text_air_rate"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/ic_air_rate_1"
                            android:gravity="center"
                            android:text=""
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/text_air_temp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:textSize="80sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/text_air_mode_show"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:gravity="center"
                    android:text="@string/str_other_mode"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/text_air_mode_auto"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_air_mode_auto_2"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/text_air_mode_cool"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_air_mode_cold_1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_air_mode_drying"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_air_mode_drying_1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_air_mode_wind"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_air_mode_wind_1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_air_mode_warm"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_air_mode_warm_1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text_air_power"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:clickable="true"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text_air_tempsub"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/str_other_tempsub"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_air_mode"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/str_other_mode"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_air_tempadd"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/str_other_tempadd"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_four_no"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/str_four_no"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_four_yes"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/str_four_yes"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

</ScrollView>